%h3= "It is currently #{@data.weather}."
  %img.weather-icon{src: @data.icon_url}

%p= "You should probably wear #{@data.wear}."

%table.horizontal
  %tr
    %td Temp
    %td= "#{@data.temp_f} F"
  %tr
    %td Feels like
    %td= "#{@data.feelslike_f} F"
  %tr
    %td Wind speed
    %td= "#{@data.wind_mph} mph"
  %tr
    %td Today's Precipitation
    %td= "#{@data.precip_today_in} inches"
